<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ai.billsplitter">

    <application
        android:allowBackup="true"
        android:icon="@drawable/square_log"
        android:label="@string/app_name"
        android:roundIcon="@drawable/round_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.BillSplitter">
        <activity android:name=".FrontEnd.SplashScreen"
            android:theme="@style/CustomSplashTheme"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FrontEnd.MainActivity"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>